{
    "include": [
        "db.json",
        "com.json"
    ],
    "core": {
        "name": "server"
    },
    "lua": {
        "main": "Server"
    },
    "listen": {
        "http": {
            "port": 8088
        },
        "rpc": {
            "port": 7788
        },
        "gate": {
            "port": 1995
        }
    },
    "master": {
        "host" : "http://127.0.0.1:8088"
    },
    "http": {
        "auth": true,
        "index": "index.html",
        "domain": "https://www.huwai.pro",
        "root": "${WORK_DIR}/www/dist",
        "upload": "${WORK_DIR}/www/dist",
        "download": "${WORK_DIR}/www/dist",
        "header": {
            "Access-Control-Allow-Origin": "*"
        }
    },
    "path": {
        "cluster": "${WORK_DIR}/config/cluster/debug.json"
    }
}